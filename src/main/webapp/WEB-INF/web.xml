<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  <display-name>Archetype Created Web Application</display-name>

  <!-- Welcome(index) Servlet & Mapping -->
  <servlet>
    <servlet-name>Welcome</servlet-name>
    <servlet-class>twitch.controllers.WelcomeServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Welcome</servlet-name>
    <url-pattern></url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Welcome</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>


  <!-- Account Servlet & Mapping -->
  <servlet>
    <servlet-name>Account</servlet-name>
    <servlet-class>twitch.controllers.AccountServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Account</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Account</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Account</servlet-name>
    <url-pattern>/dashboard</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Account</servlet-name>
    <url-pattern>/editProfile</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Account</servlet-name>
    <url-pattern>/studentList</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Account</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Account</servlet-name>
    <url-pattern>/hideGreetz</url-pattern>
  </servlet-mapping>

  <!-- Account Edit Page Servlet & Mapping -->
  <servlet>
    <servlet-name>EditAccount</servlet-name>
    <servlet-class>twitch.controllers.EditAccountServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>EditAccount</servlet-name>
    <url-pattern>/editProfileNew</url-pattern>
  </servlet-mapping>

  <!-- FILTERS -->
  <filter>
    <filter-name>AuthFilter</filter-name> <!-- mandatory -->
    <filter-class>twitch.Filters.AuthFilter</filter-class> <!-- mandatory -->
  </filter>
  <filter-mapping>
    <filter-name>AuthFilter</filter-name> <!-- mandatory -->
    <servlet-name>Account</servlet-name>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AuthFilter</filter-name> <!-- mandatory -->
    <servlet-name>EditAccount</servlet-name>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>

  <!-- LISTENER -->
  <listener>
    <listener-class>
      twitch.controllers.MyServletContextListener
    </listener-class>
  </listener>

  <!-- ERROR PAGE MAPPING -->
  <error-page>
    <error-code>403</error-code>
    <location>/error-page/403.html</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/error-page/404.html</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/error-page/500.html</location>
  </error-page>

</web-app>
